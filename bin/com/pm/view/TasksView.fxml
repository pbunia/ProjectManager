<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pm.view.MainViewController">
	<children>
		<SplitPane minHeight="400.0" minWidth="440.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<items>
				<AnchorPane>
					<children>
						<GridPane alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
							<columnConstraints>
								<ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES" />
								<RowConstraints maxHeight="500.0" minHeight="10.0" prefHeight="400.0" vgrow="SOMETIMES" />
								<RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="30.0" vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<Label alignment="CENTER" contentDisplay="CENTER" text="My Tasks" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
								<ToolBar prefHeight="40.0" prefWidth="200.0" GridPane.rowIndex="2">
									<items>
										<Button mnemonicParsing="false" onAction="#addTaskButton" text="ADD" />
										<Button mnemonicParsing="false" onAction="#refresh" text="REFRESH" />
                              <ComboBox fx:id="projectCB" prefWidth="150.0" />
									</items>
								</ToolBar>
                        <ScrollPane fx:id="SPane" hbarPolicy="NEVER" pickOnBounds="false" prefHeight="200.0" prefWidth="200.0" vbarPolicy="ALWAYS" GridPane.rowIndex="1">
                           <content>
                              <VBox fx:id="vBoxSB" />
                           </content>
                        </ScrollPane>
							</children>
							<padding>
								<Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
							</padding>
						</GridPane>
					</children>
				</AnchorPane>
			</items>
		</SplitPane>
	</children>
</AnchorPane>
